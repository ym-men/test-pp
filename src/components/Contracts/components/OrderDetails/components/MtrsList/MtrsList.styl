.cellStyle
  word-break break-all

  &:nth-of-type(1)
    width 300px

  &:nth-of-type(2)
    width 200px

  &:nth-of-type(3)
    width 350px

.buttonStyle {
  position: relative
  border-radius 0px
  border solid 1px
  text-align left

  &.status {
    &:before {
      content: '';
      display: block;
      position absolute;
      width: 10px;
      height: 10px;
      border-radius 50%;
      background-color Basic600;
      top: calc(50% - 5px);
      left: 220px;
    }
  }

  &.red {
    &:before {
      background-color Red600;
    }
  }

  &.green {
    &:before {
      background-color Green600;
    }
  }
}

.buttonIconStyle
  position absolute
  top 7px
  right 10px

.lineStyle
  height 2px
  border-top dashed 1px #939393


