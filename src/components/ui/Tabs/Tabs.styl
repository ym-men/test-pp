.tab
  height: 20px;
  padding: 12px 24px;
  font-size: 16px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: 4px;
  border: solid 1px #d7d7d7;
  text-transform uppercase
  cursor pointer

  &:hover
  &.active
    border: solid 1px #000000;

  &.active
    background-color: #ffcb02;

  &:first-child
    border-radius: 2px 0 0 2px

  &:last-child
    border-radius: 0 2px 2px 0

  &.small
    height: auto;
    padding: 10px 22px 10px 12px;
    font-size: 14px;
    letter-spacing: 3px;