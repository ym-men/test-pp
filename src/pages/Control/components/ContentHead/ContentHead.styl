.contractHeadText
  font-size: 35px;
  font-weight: 300;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  color: #000000;
  margin-top: 10px;

.tab
  text-transform: uppercase;

.editTab {
  text-transform: uppercase;
  position: relative

  &.status {
    &:before {
      content: '';
      display: block;
      position absolute;
      width: 10px;
      height: 10px;
      border-radius 50%;
      background-color #ffca00;
      top: calc(50% - 5px);
      right: 10px;
    }
  }
}

